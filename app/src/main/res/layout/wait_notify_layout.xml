<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total_Amount"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="34dp"
        android:id="@+id/total_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw amount"
        android:layout_marginTop="43dp"
        android:id="@+id/withdraw_amount"
        android:layout_below="@+id/total_amount"
        android:layout_alignStart="@+id/total_amount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="withdraw"
        android:id="@+id/withdraw_button"
        android:layout_below="@+id/withdraw_amount"
        android:layout_toEndOf="@+id/withdraw_amount"
        android:layout_marginStart="29dp"
        android:layout_marginTop="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:layout_marginTop="49dp"
        android:id="@+id/balance"
        android:layout_below="@+id/withdraw_button"
        android:layout_alignStart="@+id/withdraw_amount"
        android:layout_marginStart="17dp" />


</RelativeLayout>